@model DIET.ViewModels.LoginModel
    <link rel="stylesheet" href="~/css/site.css" />



    <div class="center" style="width: 40%">
        <div class="m-1">
            <h1 style="text-align:center">Вход на сайт</h1>
        </div>

        <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
            <div class="m-3">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div class="form-floating" style="text-align:center">
                    <label for="floatingInput" asp-for="Email"><font style="text-align:center">Адрес электронной почты</font></label>
                    <input type="email" ; class="w-75 form-control" asp-for="Email" id="floatingInput"  style="margin: auto;" placeholder="name@example.com">
                </div>
                <div class="form-floating" style="text-align:center">
                    <label for="floatingPassword" asp-for="Password"><font style="vertical-align: inherit;"><font style="vertical-align: inherit; text-align:center">Пароль</font></font></label>
                    <input type="password" ; style="margin: auto;" class="w-75 form-control" asp-for="Password" id="floatingPassword" placeholder="Пароль">
                </div>

            </div>

            <div class="form-floating m-2" style="text-align:center">
                <input type="submit" value="Войти" class="btn btn-style w-75" style="text-align:center" />
             @*   <h6 style="text-align:center;font-weight: 300; "><a class="text-dark" asp-action="Register" asp-controller="Account">Регистрация</a></h6>*@
            </div>
        </form>
    </div>
